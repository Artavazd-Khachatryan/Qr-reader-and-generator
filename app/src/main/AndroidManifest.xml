<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="test.qr.generator.qrreader">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>


    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <uses-feature android:name="android:hardware.camera" />
    <uses-feature android:name="android:hardware.camera.autofocus" />


    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher_qr"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_qr_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="test.qr.generator.qrreader.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="test.qr.generator.qrreader.activities.CreateActivity" />
        <activity android:name="test.qr.generator.qrreader.activities.ScanerActivity"></activity>
    </application>

</manifest>